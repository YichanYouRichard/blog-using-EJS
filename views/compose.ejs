<%- include('partials/header'); -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" name="postTitle" class="form-control" id="postTitle" />
  </div>
  <div class="form-group">
    <label for="postDescr">Description</label>
    <textarea name="postDescr" class="form-control" id="postDescr" cols="30" rows="10"></textarea>
  </div>
  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer'); -%>
